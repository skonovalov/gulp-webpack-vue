.services {
	li {
		padding 25px
		background-color rgba($med, 0.1)
		border-radius 4px
		margin-bottom 20px
		transition box-shadow .5s ease

		&:hover {
			box-shadow 0 5px 10px 0px rgba(0,0,0,0.15)
		}
	}

	i {
		width 40px
		display inline-block
	}

	h4 {
		margin 0 0 20px
		font-weight 700
		text-transform uppercase
	}

	p {
		margin-top 20px
		line-height 25px
		margin-bottom 0
	}

	&__item {
		position relative
		padding 0 !important
		padding-bottom 56% !important
		overflow hidden

		&:before {
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			z-index 1
			width 100%
			background-color rgba($text, 0.7)
		}

		img {
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			max-width none
			width 100%
		}

		h4, p {
			color #fff !important
		}

		p {
			margin-top 0
			font-size 14px
			line-height 20px
		}

		i {
			display none
		}
	}

	&__inner {
		position absolute
		left 0
		bottom 0
		right 0
		top 0
		z-index 2
		display flex
		flex-direction column
		justify-content center
		padding 10px
	}

	@media screen and (min-width: $screen-xs + 100px) {
		ul {
			display flex
			flex-flow row wrap
			justify-content space-between
		}

		li {
			width 48%
		}

		&__item {
			padding-bottom 30% !important
		}
	}

	@media screen and (min-width: $screen-sm) {
		ul {
			justify-content center
			margin -10px
		}

		 li {
			width 30%
			margin 10px
			opacity 0
			transform translateY(150px)
			transition all .3s ease
		}

		p {
			font-size 14px
		}

		i {
			width 50px
		}

		&__item {
			margin 10px
			width 400px !important
			height 225px !important
			padding-bottom 0 !important
			transform translateY(150px)
			transition all .3s ease

			&:hover {
				.services__inner {
					transform translateY(0)
				}

				i {
					opacity 0
				}
			}

			i {
				display block
				position absolute
				top 50%
				left 0
				right 0
				z-index 2
				margin 0 auto
				margin-top -50px
				width 100px
				transition opacity .1s 0s ease
			}
		}

		&__inner {
			transform translateY(100%)
			transition transform .3s ease
		}

	}
}

.services.animate {
	li {
		opacity 1
		transform translateY(0)
	}
}