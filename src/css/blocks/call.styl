.call {
	$color =  #f30e3f

	position fixed
	bottom 0
	right 20px
	width 260px
	height 40px
	background-color $color
	box-shadow 0 0 15px 5px rgba($bot, 0.2)
	border-top-left-radius 15px
	cursor pointer
	will-change transform
	transition height .5s ease

	@media screen and (min-width: $screen-sm) {
		right 40px
	}

	h3 {
		position relative
		padding-left 50px
		line-height 40px
		color #fff
		font-weight 400
		transition padding .3s ease

		&:before {
			content ''
			position absolute
			top 10px
			left 15px
			width 18px
			height 18px
			background-image url(../images/telephone.svg)
			background-repeat no-repeat
			background-size cover
		}
	}

	&__wrap {
		position relative
	}

	&__close {
		position absolute
		top -90px
		left -45px
		width 25px !important
		height 25px
		background-color rgba(255, 255, 255, 0)
		background-image url(../images/cancel.svg)
		background-repeat no-repeat
		background-position center
		background-size cover
		border 0
		cursor pointer
		opacity 0
		visibility hidden
		outline none
		-webkit-tap-highlight-color rgba(0, 0, 0, 0)
		transition opacity .3s ease
	}

	&__form {
		padding 20px 15px
		background-color #fff

		.btn {
			padding-top 10px
			padding-bottom 10px
			background-color $color
			border-color $color

			&:hover {
				color $color
				background-color #fff
			}
		}

		input[type="text"],
		textarea {
			padding 10px
			font-size 14px
			line-height 18px
			border-radius 5px

			&:focus {
				border-color $text
			}
		}
	}

	&__header {
		margin-bottom 15px
		color $light-text
		font-size 18px
		line-height 30px
		font-weight 400
		text-align center

		@media screen and (min-width: $screen-sm) {
			font-size 30px
			line-height 40px
		}
	}
}

.show {
	height 345px
	box-shadow 0 0 15px 5px rgba(#000, 0.2)

	h3 {
		padding-left 15px

		&:before {
			opacity 0
		}
	}

	.call__close {
		opacity 1
		visibility visible
	}
}