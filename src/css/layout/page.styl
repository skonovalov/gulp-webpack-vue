.page {

	&__wrapper {
		display flex
		flex-direction column
		height 100%
	}

	&__content {
		flex 1
		padding-top 60px

		@media screen and (min-width: $screen-sm) {
			padding-top 0
		}
	}
}

.page.overflow {
	overflow hidden
	position relative

	&:before {
		content ''
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		z-index 1
		display block
		background-color rgba(0, 0, 0, .6)
	}
}