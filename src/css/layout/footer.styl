.footer {
	{cfix}
	padding 25px 0 40px
	color #727780

	li {
		margin-bottom 10px

		&:last-child {
			margin-bottom 0
		}
	}

	a {
		font-size 14px
		font-weight 400
		color #727780
		text-decoration none

		&:hover {
			color darken(@color, 15)
		}
	}

	h5 {
		margin-bottom 20px
		font-size 14px
		font-weight 500
		color $text
		text-transform uppercase

		@media screen and (min-width: $screen-xs) {
			margin-top 20px
			font-size 22px
			line-height 30px
			text-transform none
		}

		@media screen and (min-width: $screen-sm) {
			font-size 30px
			line-height 40px
		}
	}

	&__top {
		padding-bottom 20px
		overflow hidden

		li {
			margin-bottom 0
			font-size 13px
		}

		@media screen and (min-width: $screen-xs + 140px) {
			border-bottom 1px solid #eee
		}

		@media screen and (min-width: $screen-xs) {
			{cfix}
		}
	}

	&__address {
		li {
			margin-bottom 5px

			&:nth-child(3) {
				margin-bottom 15px
			}
		}

		span {
			font-weight 500
		}

		a {
			font-size 13px
			color $light-text
			text-decoration none
		}


		@media screen and (min-width: $screen-xs) {
			float left
			width 50%
		}

		@media screen and (min-width: $screen-sm) {
			width 40%

			li {
				margin-bottom 10px
				font-size 14px

				&:nth-child(3) {
					margin-bottom 25px
				}
			}

			a {
				font-size 14px
			}
		}

		@media screen and (min-width: $screen-md) {
			li {
				margin-bottom 20px
				font-size 18px

				&:nth-child(3) {
					margin-bottom 30px
				}
			}

			a {
				font-size 18px
			}
		}
	}

	&__form {
		@media screen and (min-width: $screen-xs) {
			float right
			width 50%
		}
		@media screen and (min-width: $screen-sm) {
			width 60%
			opacity 0
			transform translateX(300px)
			transition all .7s ease
		}
	}

	&__left {
		margin-top 20px
		font-size 14px
		font-weight 400
		color darken(@color, 20)
		text-transform uppercase

		span {
			text-transform none
		}
	}

	&__right {
		padding-top 20px
		border-top 1px solid #eee
		
		a {
			font-size 14px
			font-weight 400
			color #727780
			text-decoration none

			&:hover {
				color darken(@color, 15)
			}
		}

		@media screen and (min-width: $screen-xs + 140px) {
			float right
			border-top 0
			padding-top 0
			text-align right

			li {
				display inline
				margin 0 15px
			}
		}
	}

	input[type="text"],
	textarea {
		border-radius 4px
	}

	.top__header {
		margin-top 30px
		font-size 18px
		line-height 30px
		margin-bottom 30px
		color $text
		text-align center

		@media screen and (min-width: $screen-xs) {
			margin-top 20px
			margin-bottom 20px
			font-size 22px
			font-weight 500
		}
		@media screen and (min-width: $screen-sm) {
			font-size 30px
			line-height 40px
		}
	}

	.form__error {
		color $light-text
	}
}

.footer.animate {
	.footer__form {
		opacity 1
		transform translateX(0)
	}
}